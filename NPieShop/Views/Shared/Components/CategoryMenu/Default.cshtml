@model IEnumerable<Category>

<list class="dropdown nav navbar-nav">
    <a 
       asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pies</a>
    <ul class="dropdown-menu">
        @foreach(var category in Model)
            {
                <list>
                    <a asp-controller="Pie"
                       asp-action="List"
                       asp-route-category="@category.CategoryName">@category.CategoryName</a>
                </list>
            }
        <li class="divider"></li>
        <li>
            <a asp-controller="Pie" asp-action="List" asp-route-category="">View All Pies</a>
        </li>
    </ul>
</list>
